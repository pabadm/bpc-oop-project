<Page x:Class="BandDatabaser.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BandDatabaser"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="550"
      Title="LibraryPage">

    <Grid SizeChanged="Grid_SizeChanged" >
       
        <TextBox x:Name="BandText" Height="23" Margin="209,18,141,0" MinWidth="200" MaxWidth="400" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" RenderTransformOrigin="0.501,0.474" GotFocus="BandText_GotFocus" LostFocus="BandText_LostFocus"/>
        <Button x:Name="SearchBtn" Content="🔍" Margin="409,18,101,0" Width="40" Height="23" RenderTransformOrigin="0.5,0.422" VerticalAlignment="Top" Click="SearchBtn_Click">
            
        </Button>
        <ListBox x:Name="BandsList" Margin="10,74,10.4,35.6" MouseDoubleClick="BandsList_MouseDoubleClick"/>
        <Label x:Name="NumBands" Content="Count of Bands:" HorizontalAlignment="Left" Margin="10,0,0,4.6" VerticalAlignment="Bottom" Height="26" Width="181"/>
        <Label Content="Band name" HorizontalAlignment="Left" Height="26" Margin="9,43,0,0" VerticalAlignment="Top" Width="92"/>

    </Grid>
</Page>
